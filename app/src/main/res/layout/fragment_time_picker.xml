<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PanicTimePicker">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/app_icon"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            />
        <ImageView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="@drawable/safe_u_text"
            android:layout_gravity="center"
            android:textColor="@color/color_primary"
            />
        <Button
            android:id="@+id/btPanicP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Show Panic Button"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:fontFamily="@font/raleway_regular"
            android:textStyle="bold"
            android:layout_marginTop="44dp"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:visibility="visible" />

        <Button
            android:id="@+id/btScheduleP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:fontFamily="@font/raleway_regular"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Schedule Panic Button"
            android:visibility="visible" />

        <TimePicker
            android:id="@+id/timePickerP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

             />


    </LinearLayout>
</FrameLayout>